%h1 New ShrtQuiz
#quiz
  = form_for @quiz, :url => { :action => "create" } do |f|
    %br Question
    = f.text_area "question"
    %br Answer 1
    = f.text_area "answer1"
    %br Answer 2
    = f.text_area "answer2"
    %br Answer 3
    = f.text_area "answer3"
    %br Answer 4
    = f.text_area "answer4"
    %br
    = f.submit "publish"
